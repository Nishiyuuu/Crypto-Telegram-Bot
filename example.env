# ====================================================

# ü§ñ Telegram Bot Configuration (REQUIRED)
BOT_TOKEN=your_telegram_bot_token_here

# üìä Database Configuration (REQUIRED)
MONGO_URI=mongodb://localhost:27017/crypto_bot

# Alternative MongoDB configurations:
# With authentication:
# MONGO_URI=mongodb://username:password@localhost:27017/crypto_bot
# MongoDB Atlas (Cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/crypto_bot

# üåç Environment Settings
NODE_ENV=production
LOG_LEVEL=info

# üìà API Integrations (OPTIONAL but recommended)
# CoinGecko API (free tier, no key required)
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Binance API (for advanced features)
# BINANCE_API_KEY=your_binance_api_key
# BINANCE_SECRET_KEY=your_binance_secret_key

# CryptoCompare API (backup data source)
# CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key

# üîî Notification Settings
NOTIFICATION_INTERVAL=30000
MAX_COINS_FREE=5
MAX_COINS_VIP=20
DEFAULT_THRESHOLD=5.0

# üõ°Ô∏è Security Settings
RATE_LIMIT_WINDOW=900000
