# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/crypto_bot

# Optional: MongoDB with authentication
# MONGO_URI=mongodb://username:password@localhost:27017/crypto_bot

# Optional: MongoDB Atlas (Cloud)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/crypto_bot

# Node Environment
NODE_ENV=development

# Optional: Binance API (if needed for additional features)
# BINANCE_API_KEY=your_binance_api_key
# BINANCE_SECRET_KEY=your_binance_secret_key

# Optional: Logging Level
LOG_LEVEL=info
